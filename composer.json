{
  "name": "omar-haris/card-name-fit",
  "description": "PHP library to squeeze Arabic or English personal names to a fixed length for ID, bank or payment cards.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Omar Haris",
      "email": "omar@haris.bz"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "CardNameFit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CardNameFit\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1"
  },
  "scripts": {
    "test": "phpunit"
  },
  "homepage": "https://github.com/omar-haris/card-name-fit",
  "keywords": [
    "card-name",
    "name-fit",
    "name-formatter",
    "name-truncate",
    "name-shorten",
    "name-compress",
    "arabic-names",
    "latin-names",
    "character-limit",
    "card-printing",
    "id-card",
    "identity-card",
    "bank-card",
    "payment-card",
    "visa",
    "credit-card",
    "debit-card",
    "bank-card",
    "security-card",
    "php-library"
  ],
  "support": {
    "issues": "https://github.com/omar-haris/card-name-fit/issues",
    "source": "https://github.com/omar-haris/card-name-fit"
  }
}
